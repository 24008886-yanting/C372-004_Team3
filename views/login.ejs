<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login | Repawblic Pets</title>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body class="bg-light">
  <%- include('partials/navbar') %>

  <main class="py-5">
    <div class="container my-5">
      <div class="row justify-content-center">
        <div class="col-12 col-md-6">
          <div class="card shadow-sm">
            <div class="card-body">
              <h3 class="card-title mb-3">Login</h3>

              <% const flashSuccess = Array.isArray(success) ? success : (success ? [success] : []); %>
              <% const flashError = Array.isArray(error) ? error : (error ? [error] : []); %>

              <% if (flashSuccess && flashSuccess.length) { %>
                <div class="alert alert-success">
                  <% flashSuccess.forEach(function(message) { %>
                    <div><%= message %></div>
                  <% }); %>
                </div>
              <% } %>

              <% if (flashError && flashError.length) { %>
                <div class="alert alert-danger">
                  <% flashError.forEach(function(err) { %>
                    <div><%= err %></div>
                  <% }); %>
                </div>
              <% } %>

              <form action="/login" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                  <label for="email" class="form-label">Email</label>
                  <input type="email" id="email" name="email" class="form-control" required value="<%= typeof email !== 'undefined' ? email : '' %>" placeholder="Enter your email">
                </div>
                <div class="mb-3">
                  <label for="password" class="form-label">Password</label>
                  <input type="password" id="password" name="password" class="form-control" required placeholder="Enter your password">
                </div>
                <div class="mb-3 text-end">
                  <a href="/forgot-password">Forgot your password?</a>
                </div>
                <div class="d-flex justify-content-end">
                  <button type="submit" class="btn btn-primary">Login</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    <p class="text-center mt-3 mb-0">
      Don't have an account?
      <a href="/register">Create one here</a>
    </p>
  </main>

  <%- include('partials/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+oj1gqJ0s4SK9Rzt+M26fRj6E3I6z" crossorigin="anonymous"></script>
</body>
</html>
