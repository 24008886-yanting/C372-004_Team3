<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Refund Request | Repawblic Pets</title>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Manrope:wght@500;600;700&family=Space+Grotesk:wght@500;700&display=swap">
  <link rel="stylesheet" href="/css/refundRequest.css">
</head>
<body>
  <%- include('partials/navbar') %>

  <main>
    <header class="page-header">
      <p class="subhead">Tell us what happened and we will review your request.</p>
      <h1>Refund Request</h1>
    </header>

    <section class="card">
      <% const statusText = (refundStatus || '').toString().toUpperCase(); %>
      <% const isRefunded = statusText === 'REFUNDED'; %>
      <% const isPending = statusText === 'PENDING'; %>
      <% const displayStatus = isRefunded ? 'REFUNDED' : (refundStatus ? 'FAILED' : '-'); %>
      <div class="order-summary">
        <div>
          <p class="label">Order ID</p>
          <p class="value"><%= orderId ? ('#' + orderId) : '-' %></p>
        </div>
        <div>
          <p class="label">Item</p>
          <p class="value"><%= itemName || '-' %></p>
        </div>
        <div>
          <p class="label">Quantity</p>
          <p class="value"><%= quantity || '-' %></p>
        </div>
        <div>
          <p class="label">Amount Paid</p>
          <p class="value"><%= amount ? ('S$' + Number(amount).toFixed(2)) : '-' %></p>
        </div>
        <div>
          <p class="label">Payment Method</p>
          <p class="value"><%= paymentMethod || '-' %></p>
        </div>
        <div>
          <p class="label">Refund Status</p>
          <p class="value"><%= displayStatus %></p>
        </div>
      </div>

      <% if (success) { %>
        <div class="alert alert--success"><%= success %></div>
      <% } else if (isRefunded) { %>
        <div class="alert alert--success">Refund successful.</div>
      <% } else if (refundStatus) { %>
        <div class="alert alert--error">Refund failed.</div>
      <% } %>
      <% if (error) { %>
        <div class="alert alert--error"><%= error %></div>
      <% } %>

      <form class="refund-form" method="POST" action="/refund-request">
        <input type="hidden" name="order_id" value="<%= orderId || '' %>">
        <input type="hidden" name="item_name" value="<%= itemName || '' %>">
        <input type="hidden" name="quantity" value="<%= quantity || '' %>">
        <input type="hidden" name="amount" value="<%= amount || '' %>">

        <label class="label" for="reason">Reason for refund</label>
        <select id="reason" name="reason" required>
          <option value="">Select a reason</option>
          <option value="Damaged item">Damaged item</option>
          <option value="Wrong item delivered">Wrong item delivered</option>
          <option value="Missing item">Missing item</option>
          <option value="Late delivery">Late delivery</option>
          <option value="Other">Other</option>
        </select>

        <label class="label" for="details">Details (optional)</label>
        <textarea id="details" name="details" rows="4" placeholder="Share what happened so we can help faster."></textarea>

        <button class="primary-btn" type="submit" <%= (isRefunded || isPending) ? 'disabled' : '' %>>Submit Refund Request</button>
        <% if (isPending) { %>
          <p class="muted-small">Your request is pending admin approval.</p>
        <% } %>
        <% if (isRefunded) { %>
          <p class="muted-small">Refund completed.</p>
        <% } %>
      </form>
    </section>

    <a class="back-link" href="/allTransactions">&#60; Back to Transactions</a>
  </main>
</body>
</html>
