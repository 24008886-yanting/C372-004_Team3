<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventory - Repawblic Pets Admin</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Patrick+Hand&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/navbar.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Patrick Hand', cursive;
            background-color: #f5f5f5;
            color: #333;
            line-height: 1.6;
        }

        .container {
            max-width: 1400px;
            margin: 40px auto;
            padding: 0 20px;
        }

        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            background-color: white;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .page-header h1 {
            color: #ff6b9d;
            font-size: 2em;
        }

        .header-stats {
            display: flex;
            gap: 30px;
            margin-left: auto;
        }

        .stat-box {
            text-align: center;
        }

        .stat-number {
            font-size: 1.8em;
            font-weight: bold;
            color: #ff6b9d;
        }

        .stat-label {
            font-size: 0.9em;
            color: #6b7280;
            margin-top: 5px;
        }

        .btn-primary {
            background-color: #ff6b9d;
            color: white;
            border: none;
            padding: 12px 24px;
            border-radius: 6px;
            cursor: pointer;
            font-family: 'Patrick Hand', cursive;
            font-size: 1em;
            font-weight: 600;
            transition: background-color 0.3s, transform 0.2s;
            text-decoration: none;
            display: inline-block;
        }

        .btn-primary:hover {
            background-color: #ff4a7f;
            transform: translateY(-2px);
        }

        .btn-edit {
            background-color: #3b82f6;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 4px;
            cursor: pointer;
            font-family: 'Patrick Hand', cursive;
            font-size: 0.85em;
            text-decoration: none;
            transition: background-color 0.3s;
            display: inline-block;
        }

        .btn-edit:hover {
            background-color: #2563eb;
        }

        .btn-delete {
            background-color: #ef4444;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 4px;
            cursor: pointer;
            font-family: 'Patrick Hand', cursive;
            font-size: 0.85em;
            text-decoration: none;
            transition: background-color 0.3s;
            display: inline-block;
        }

        .btn-delete:hover {
            background-color: #dc2626;
        }

        .search-filter {
            background-color: white;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-bottom: 30px;
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
            align-items: center;
        }

        .search-filter input {
            padding: 10px 15px;
            border: 2px solid #e5e7eb;
            border-radius: 6px;
            font-family: 'Patrick Hand', cursive;
            font-size: 0.95em;
            flex: 1;
            min-width: 200px;
            transition: border-color 0.3s;
        }

        .search-filter input:focus {
            outline: none;
            border-color: #ff6b9d;
            box-shadow: 0 0 8px rgba(255, 107, 157, 0.2);
        }

        .inventory-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 20px;
            margin-bottom: 40px;
        }

        .product-card {
            background-color: white;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s, box-shadow 0.3s;
        }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
        }

        .product-image {
            width: 100%;
            height: 200px;
            object-fit: cover;
            background-color: #f3f4f6;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.9em;
            color: #9ca3af;
            overflow: hidden;
        }

        .product-content {
            padding: 16px;
        }

        .product-name {
            font-size: 1.05em;
            font-weight: 600;
            color: #ff6b9d;
            margin-bottom: 6px;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .product-category {
            font-size: 0.8em;
            background-color: #f3f4f6;
            color: #6b7280;
            display: inline-block;
            padding: 4px 8px;
            border-radius: 4px;
            margin-bottom: 8px;
            text-transform: uppercase;
            font-weight: 600;
        }

        .product-price {
            font-size: 1.25em;
            font-weight: bold;
            color: #10b981;
            margin-bottom: 8px;
        }

        .product-stock {
            font-size: 0.9em;
            margin-bottom: 12px;
            padding: 8px;
            border-radius: 4px;
            text-align: center;
        }

        .stock-in {
            background-color: #d1fae5;
            color: #065f46;
        }

        .stock-low {
            background-color: #fef3c7;
            color: #92400e;
        }

        .stock-out {
            background-color: #fee2e2;
            color: #991b1b;
        }

        .product-actions {
            display: flex;
            gap: 8px;
            margin-top: 12px;
        }

        .product-actions form {
            flex: 1;
        }

        .product-actions a,
        .product-actions button {
            flex: 1;
            text-align: center;
        }

        .product-actions button {
            margin: 0;
        }

        .inventory-table-wrapper {
            background-color: white;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            margin-bottom: 40px;
        }

        .view-toggle {
            background-color: white;
            padding: 15px 20px;
            border-bottom: 1px solid #e5e7eb;
            display: flex;
            gap: 10px;
        }

        .view-btn {
            background-color: #f3f4f6;
            border: 2px solid #e5e7eb;
            padding: 8px 16px;
            border-radius: 6px;
            cursor: pointer;
            font-family: 'Patrick Hand', cursive;
            font-size: 0.9em;
            transition: all 0.3s;
        }

        .view-btn.active {
            background-color: #ff6b9d;
            color: white;
            border-color: #ff6b9d;
        }

        .inventory-table {
            width: 100%;
            border-collapse: collapse;
        }

        .inventory-table thead {
            background-color: #f3f4f6;
            border-bottom: 2px solid #e5e7eb;
        }

        .inventory-table th {
            padding: 16px 20px;
            text-align: left;
            font-weight: 600;
            color: #374151;
            font-size: 0.9em;
        }

        .inventory-table td {
            padding: 16px 20px;
            border-bottom: 1px solid #e5e7eb;
        }

        .inventory-table tbody tr:hover {
            background-color: #f9fafb;
        }

        .inventory-table tbody tr:last-child td {
            border-bottom: none;
        }

        .product-row-actions {
            display: flex;
            gap: 8px;
            flex-wrap: wrap;
        }

        .product-img-thumb {
            width: 50px;
            height: 50px;
            object-fit: cover;
            border-radius: 4px;
            background-color: #f3f4f6;
        }

        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #6b7280;
        }

        .empty-state p {
            font-size: 1.1em;
            margin-bottom: 20px;
        }

        .table-view {
            display: none;
        }

        .table-view.active {
            display: block;
        }

        .grid-view {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 20px;
        }

        .grid-view.hidden {
            display: none;
        }

        @media (max-width: 768px) {
            .page-header {
                flex-direction: column;
                gap: 15px;
            }

            .header-stats {
                width: 100%;
                margin-left: 0;
                justify-content: space-around;
            }

            .search-filter {
                flex-direction: column;
            }

            .search-filter input {
                width: 100%;
            }

            .inventory-grid {
                grid-template-columns: 1fr;
            }

            .view-toggle {
                flex-wrap: wrap;
            }

            .product-actions {
                flex-direction: column;
            }

            .product-row-actions {
                flex-direction: column;
            }

            .btn-edit,
            .btn-delete {
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <%- include('partials/navbar') %>

    <div class="container">
        <!-- Page Header -->
        <div class="page-header">
            <h1>Inventory Management</h1>
            <div class="header-stats">
                <div class="stat-box">
                    <div class="stat-number"><%= products ? products.length : 0 %></div>
                    <div class="stat-label">Total Products</div>
                </div>
                <div class="stat-box">
                    <div class="stat-number">
                        <%= products ? products.filter(p => p.stock > 0).length : 0 %>
                    </div>
                    <div class="stat-label">In Stock</div>
                </div>
                <div class="stat-box">
                    <div class="stat-number">
                        <%= products ? products.filter(p => p.stock === 0).length : 0 %>
                    </div>
                    <div class="stat-label">Out of Stock</div>
                </div>
            </div>
            <a href="/products/new" class="btn-primary">+ Add Product</a>
        </div>

        <!-- Search and Filter -->
        <div class="search-filter">
            <input 
                type="text" 
                id="searchInput" 
                placeholder="Search by product name or category..." 
                onkeyup="filterProducts()"
            >
        </div>

        <!-- View Toggle -->
        <div class="view-toggle">
            <button class="view-btn active" onclick="switchView('grid')">Grid View</button>
            <button class="view-btn" onclick="switchView('table')">Table View</button>
        </div>

        <!-- Grid View -->
        <div id="gridView" class="grid-view active">
            <% if (products && products.length > 0) { %>
                <% products.forEach(product => { %>
                    <div class="product-card searchable" data-name="<%= product.product_name.toLowerCase() %>" data-category="<%= (product.category || '').toLowerCase() %>">
                        <img 
                            src="<%= product.image1 ? `/images/${product.image1}` : 'data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 width=%22200%22 height=%22200%22%3E%3Crect fill=%22%23f3f4f6%22 width=%22200%22 height=%22200%22/%3E%3C/svg%3E' %>" 
                            alt="<%= product.product_name %>" 
                            class="product-image"
                            onerror="this.src='data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 width=%22200%22 height=%22200%22%3E%3Crect fill=%22%23f3f4f6%22 width=%22200%22 height=%22200%22/%3E%3C/svg%3E'"
                        >
                        <div class="product-content">
                            <div class="product-name"><%= product.product_name %></div>
                            <div class="product-category"><%= product.category %></div>
                            <div class="product-price">$<%= (product.price / 100).toFixed(2) %></div>
                            <div class="product-stock <%= product.stock > 10 ? 'stock-in' : product.stock > 0 ? 'stock-low' : 'stock-out' %>">
                                Stock: <%= product.stock %> <%= product.stock === 0 ? '- Out of Stock' : product.stock <= 10 ? '- Low Stock' : '- Available' %>
                            </div>
                            <div class="product-actions">
                                <a href="/products/<%= product.product_id %>/edit" class="btn-edit">Edit</a>
                                <form method="POST" action="/products/<%= product.product_id %>/delete" style="margin: 0;" onsubmit="return confirm('Are you sure you want to delete this product?');">
                                    <button type="submit" class="btn-delete" style="width: 100%;">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="empty-state" style="grid-column: 1 / -1;">
                    <p>No products found</p>
                </div>
            <% } %>
        </div>

        <!-- Table View -->
        <div id="tableView" class="table-view">
            <div class="inventory-table-wrapper">
                <% if (products && products.length > 0) { %>
                    <table class="inventory-table">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Product Name</th>
                                <th>Category</th>
                                <th>Price</th>
                                <th>Stock</th>
                                <th>Description</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% products.forEach(product => { %>
                                <tr class="searchable" data-name="<%= product.product_name.toLowerCase() %>" data-category="<%= (product.category || '').toLowerCase() %>">
                                    <td>
                                        <img 
                                            src="<%= product.image1 ? `/images/${product.image1}` : 'data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 width=%2250%22 height=%2250%22%3E%3Crect fill=%22%23f3f4f6%22 width=%2250%22 height=%2250%22/%3E%3C/svg%3E' %>" 
                                            alt="<%= product.product_name %>"
                                            class="product-img-thumb"
                                            onerror="this.src='data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 width=%2250%22 height=%2250%22%3E%3Crect fill=%22%23f3f4f6%22 width=%2250%22 height=%2250%22/%3E%3C/svg%3E'"
                                        >
                                    </td>
                                    <td><strong><%= product.product_name %></strong></td>
                                    <td><%= product.category %></td>
                                    <td>$<%= (product.price / 100).toFixed(2) %></td>
                                    <td>
                                        <div class="product-stock <%= product.stock > 10 ? 'stock-in' : product.stock > 0 ? 'stock-low' : 'stock-out' %>">
                                            <%= product.stock %>
                                        </div>
                                    </td>
                                    <td style="max-width: 200px; word-break: break-word;">
                                        <%= (product.description || '').substring(0, 100) %><%= (product.description || '').length > 100 ? '...' : '' %>
                                    </td>
                                    <td>
                                        <div class="product-row-actions">
                                            <a href="/products/<%= product.product_id %>/edit" class="btn-edit">Edit</a>
                                            <form method="POST" action="/products/<%= product.product_id %>/delete" style="margin: 0;" onsubmit="return confirm('Are you sure you want to delete this product?');">
                                                <button type="submit" class="btn-delete">Delete</button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                <% } else { %>
                    <div class="empty-state">
                        <p>No products found</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <script>
        function switchView(view) {
            const gridView = document.getElementById('gridView');
            const tableView = document.getElementById('tableView');
            const buttons = document.querySelectorAll('.view-btn');

            buttons.forEach(btn => btn.classList.remove('active'));

            if (view === 'grid') {
                gridView.classList.add('active');
                gridView.classList.remove('hidden');
                tableView.classList.remove('active');
                buttons[0].classList.add('active');
            } else {
                gridView.classList.remove('active');
                gridView.classList.add('hidden');
                tableView.classList.add('active');
                buttons[1].classList.add('active');
            }
        }

        function filterProducts() {
            const searchInput = document.getElementById('searchInput').value.toLowerCase();
            const searchableItems = document.querySelectorAll('.searchable');

            searchableItems.forEach(item => {
                const name = item.getAttribute('data-name');
                const category = item.getAttribute('data-category');

                if (name.includes(searchInput) || category.includes(searchInput)) {
                    item.style.display = '';
                } else {
                    item.style.display = 'none';
                }
            });
        }

        // Show empty state if all items are hidden
        function updateEmptyState() {
            const gridView = document.getElementById('gridView');
            const tableView = document.getElementById('tableView');
            const visibleGridItems = gridView.querySelectorAll('.searchable:not([style*="display: none"])').length;
            const visibleTableItems = tableView.querySelectorAll('.searchable:not([style*="display: none"])').length;

            const hasVisibleItems = visibleGridItems > 0 || visibleTableItems > 0;
            if (!hasVisibleItems && document.querySelectorAll('.searchable').length > 0) {
                // Show a message that no products match
            }
        }

        document.getElementById('searchInput').addEventListener('keyup', updateEmptyState);
    </script>

    <%- include('partials/footer') %>
</body>
</html>
