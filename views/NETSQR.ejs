<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <script src="https://unpkg.com/event-source-polyfill"></script>
  <style>
    :root {
      --bg: #f4f6fb;
      --card: #ffffff;
      --ink: #0f172a;
      --muted: #6b7280;
      --accent: #0ea5e9;
      --accent-soft: #e0f2fe;
      --warning: #f59e0b;
      --border: #e5e7eb;
    }
    * { box-sizing: border-box; }
    body {
      margin: 0;
      min-height: 100vh;
      font-family: "Space Grotesk", "Trebuchet MS", sans-serif;
      color: var(--ink);
      background:
        radial-gradient(900px 520px at 0% -10%, #e2e8f0 0%, transparent 60%),
        radial-gradient(780px 520px at 110% 0%, #e0f2fe 0%, transparent 55%),
        var(--bg);
      display: grid;
      place-items: center;
      padding: 28px 16px;
    }
    .shell {
      width: min(820px, 100%);
      display: grid;
      gap: 14px;
    }
    .card {
      background: var(--card);
      border-radius: 22px;
      border: 1px solid var(--border);
      box-shadow: 0 18px 44px rgba(15, 23, 42, 0.12);
      padding: 24px;
    }
    .header {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 12px;
    }
    .title {
      margin: 0;
      font-size: 1.8rem;
      letter-spacing: -0.02em;
    }
    .badge {
      padding: 6px 12px;
      border-radius: 999px;
      background: var(--accent-soft);
      color: var(--accent);
      font-weight: 600;
      font-size: 0.85rem;
    }
    .grid {
      display: grid;
      gap: 18px;
      grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
      align-items: center;
    }
    .qr-box {
      background: #f8fafc;
      border: 1px dashed #cbd5f5;
      border-radius: 16px;
      padding: 18px;
      display: grid;
      place-items: center;
      gap: 12px;
    }
    .qr-box img {
      width: min(240px, 86%);
      height: auto;
      background: #fff;
      border-radius: 12px;
      padding: 10px;
      border: 1px solid var(--border);
    }
    .info {
      display: grid;
      gap: 10px;
    }
    .amount {
      font-size: 1.5rem;
      font-weight: 700;
    }
    .status {
      color: var(--muted);
    }
    .timer {
      font-weight: 600;
      color: var(--warning);
    }
    .hint {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      background: #f1f5f9;
      border-radius: 12px;
      padding: 10px 12px;
      color: #475569;
      font-size: 0.92rem;
    }
    .hint img {
      height: 22px;
      width: auto;
    }
    .actions {
      margin-top: 18px;
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
    }
    .link {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      padding: 10px 14px;
      border-radius: 12px;
      text-decoration: none;
      color: #0f172a;
      background: #e2e8f0;
      font-weight: 600;
    }
    .link.primary {
      background: var(--accent);
      color: #fff;
    }
  </style>
</head>
<body>
  <div class="shell">
    <div class="card">
      <div class="header">
        <h1 class="title">Scan the NETS QR</h1>
        <span class="badge">Secure checkout</span>
      </div>
      <div class="grid">
        <div class="qr-box">
          <img src="<%= qrCodeUrl %>" alt="NETS QR code" />
          <div class="timer" id="timer">Time remaining: --:--</div>
        </div>
        <div class="info">
          <div class="status" id="status">Scan with your bank simulator app to complete payment</div>
          <div class="amount">Amount payable: $<%= total %></div>
          <div class="hint">
            <img src="/images/netsLogo.png" alt="NETS" />
            Use your bank app to scan the QR and confirm payment.
          </div>
        </div>
      </div>
      <div class="actions">
        <a class="link primary" href="#">Waiting for payment...</a>
        <% if (typeof orderId !== 'undefined' && orderId) { %>
          <a class="link" href="/payment/<%= orderId %>">Cancel and return to payment</a>
        <% } else if (typeof cancelRedirect !== 'undefined' && cancelRedirect) { %>
          <a class="link" href="<%= cancelRedirect %>">Cancel and return</a>
        <% } else { %>
          <a class="link" href="/purchases">Cancel and return</a>
        <% } %>
      </div>
    </div>
  </div>

  <script>
    let s2sNetsTxnStatus;

    if (s2sNetsTxnStatus) {
      s2sNetsTxnStatus.close();
    }

    const txnRetrievalRef = "<%= txnRetrievalRef %>";
    const courseInitId = "<%= courseInitId %>";
    const url = "<%= typeof sseUrl !== 'undefined' && sseUrl ? sseUrl : '' %>" || `/sse/nets/payment-status/${txnRetrievalRef}`;

    s2sNetsTxnStatus = new EventSourcePolyfill(url, { heartbeatTimeout: 150000 });

    s2sNetsTxnStatus.addEventListener("message", (event) => {
      const data = JSON.parse(event.data);
      console.log("NETS Query Response:", data);

      if (data.success) {
        if (s2sNetsTxnStatus) s2sNetsTxnStatus.close();
        const successRedirect = "<%= typeof successRedirect !== 'undefined' && successRedirect ? successRedirect : '' %>";
        window.location.href = successRedirect || `/nets-qr/success?txn_retrieval_ref=${txnRetrievalRef}`;
      } else if (data.fail) {
        if (s2sNetsTxnStatus) s2sNetsTxnStatus.close();
        const failRedirect = "<%= typeof failRedirect !== 'undefined' && failRedirect ? failRedirect : '' %>";
        window.location.href = failRedirect || `/nets-qr/fail?txn_retrieval_ref=${txnRetrievalRef}`;
      }
    });

    const timerElement = document.getElementById("timer");
    const countdownDuration = Number("<%= timer %>") || 300;
    const orderExpiryMinutes = Number("<%= orderExpiryMinutes %>") || 15;
    let remainingTime = countdownDuration;

    const updateTimer = () => {
      const minutes = Math.floor(remainingTime / 60);
      const seconds = remainingTime % 60;
      timerElement.textContent = `Time remaining: ${minutes}:${seconds.toString().padStart(2, "0")}`;
      remainingTime--;

      if (remainingTime < 0) {
        clearInterval(timerInterval);
        timerElement.textContent = `Your NETS attempt expired. Choose another method within ${orderExpiryMinutes} minutes.`;
      }
    };

    const timerInterval = setInterval(updateTimer, 1000);
    updateTimer();
  </script>
</body>
</html>
