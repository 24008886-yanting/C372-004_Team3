<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://unpkg.com/event-source-polyfill"></script>
    <style>
        body {
            background-color: #f5f5f5;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .qr-container {
            background: white;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            padding: 40px;
            max-width: 450px;
            width: 100%;
            margin: 50px auto;
        }
        .qr-header {
            color: #333;
            font-weight: 700;
            font-size: 24px;
            margin-bottom: 10px;
            text-align: center;
        }
        .qr-subtitle {
            color: #666;
            font-size: 14px;
            margin-bottom: 30px;
            text-align: center;
        }
        .qr-code-box {
            background: #f8f9fa;
            border: 1px solid #e9ecef;
            border-radius: 6px;
            padding: 20px;
            margin: 20px 0;
            text-align: center;
        }
        .qr-code-box img {
            max-width: 100%;
            height: auto;
        }
        .timer {
            font-size: 16px;
            color: #007bff;
            font-weight: 600;
            margin: 20px 0;
            text-align: center;
        }
        .status-text {
            color: #666;
            font-size: 14px;
            text-align: center;
            margin: 15px 0;
        }
        .cancel-btn {
            margin-top: 20px;
            width: 100%;
        }
        .info-text {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 6px;
            color: #666;
            font-size: 13px;
            margin-top: 20px;
            line-height: 1.8;
        }
        .info-text strong {
            color: #333;
            display: block;
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <%- include('Partials/navbar') %>
    
    <div class="container">
        <div class="qr-container">
            <div class="qr-header">ðŸ›’ Scan to Pay</div>
            <div class="qr-subtitle">Complete your payment using NETS QR</div>
            
            <div class="qr-code-box">
                <img src="<%= qrCodeUrl %>" alt="QR Code" />
            </div>
            
            <p id="status" class="status-text">Scan with your bank app to complete payment</p>
            <p id="timer" class="timer">Time remaining: 5:00</p>
            
            <a href="/cart" class="btn btn-outline-secondary cancel-btn">Cancel</a>
            
            <div class="info-text">
                <strong>How it works:</strong>
                1. Open your mobile banking app<br>
                2. Select QR code payment<br>
                3. Scan the code above<br>
                4. Confirm the transaction
            </div>
        </div>
    </div>

    <script>
        let s2sNetsTxnStatus;

        if (s2sNetsTxnStatus) {
            s2sNetsTxnStatus.close();
        }

        const txnRetrievalRef = "<%= txnRetrievalRef %>";
        const url = `/sse/payment-status/${txnRetrievalRef}`;
   
        const headers = {
            "api-key": "<%= apiKey %>",
            "project-id": "<%= projectId %>",
        };

        console.log("NETS REQUEST response:", <%- JSON.stringify(fullNetsResponse) %>);

        s2sNetsTxnStatus = new EventSourcePolyfill(url, {
            headers: headers,
            heartbeatTimeout: 150000,
        });

        s2sNetsTxnStatus.addEventListener("message", (event) => {
            const data = JSON.parse(event.data);
            console.log("NETS Query Response:", data);

            const resData = data && data.result && data.result.data;
            const isSuccess = data.success || (resData && resData.response_code == '00' && resData.txn_status === 1);
            const isFail = data.fail || (resData && resData.response_code && resData.response_code !== '00');

            if (isSuccess) {
                if (s2sNetsTxnStatus) s2sNetsTxnStatus.close();
                window.location.href = `/nets-qr/success?txn_retrieval_ref=${txnRetrievalRef}`;
            } else if (isFail) {
                if (s2sNetsTxnStatus) s2sNetsTxnStatus.close();
                window.location.href = `/nets-qr/fail?txn_retrieval_ref=${txnRetrievalRef}`;
            }
        });

        s2sNetsTxnStatus.addEventListener("error", (event) => {
            console.error("SSE error:", event);
        });

        console.log("Initialized EventSourcePolyfill");

        // Countdown Timer Logic
        const timerElement = document.getElementById("timer");
        const countdownDuration = 300; // 5 minutes in seconds
        let remainingTime = countdownDuration;

        const updateTimer = () => {
            const minutes = Math.floor(remainingTime / 60);
            const seconds = remainingTime % 60;
            timerElement.textContent = `Time remaining: ${minutes}:${seconds.toString().padStart(2, "0")}`;
            remainingTime--;

            if (remainingTime < 0) {
                clearInterval(timerInterval);
                timerElement.textContent = "Transaction timed out.";

                if (s2sNetsTxnStatus) {
                    s2sNetsTxnStatus.close();
                }
                window.location.href = `/nets-qr/fail?txn_retrieval_ref=${txnRetrievalRef}`;
            }
        };

        const timerInterval = setInterval(updateTimer, 1000);
        updateTimer();
    </script>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
