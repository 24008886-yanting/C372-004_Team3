<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoice - Supermarket App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <%- include('Partials/navbar') %>

    <div class="container mt-5 pt-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg">
                    <div class="card-header bg-primary text-white text-center">
                        <h2>Invoice</h2>
                    </div>
                    <div class="card-body">
                        <!-- Invoice Header -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <p><strong>Invoice ID:</strong> <%= invoice.id %></p>
                                <p><strong>Customer:</strong> <%= invoice.user %></p>
                            </div>
                            <div class="col-md-6 text-end">
                                <p><strong>Date:</strong> <%= new Date(invoice.date).toLocaleDateString() %></p>
                                <p><strong>Time:</strong> <%= new Date(invoice.date).toLocaleTimeString() %></p>
                            </div>
                        </div>

                        <hr>

                        <!-- Items Table -->
                        <table class="table table-striped">
                            <thead class="table-primary">
                                <tr>
                                    <th>Product Name</th>
                                    <th>Quantity</th>
                                    <th>Unit Price</th>
                                    <th>Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% let total = 0; invoice.items.forEach(item => { %>
                                    <tr>
                                        <td><%= item.productName %></td>
                                        <td><%= item.quantity %></td>
                                        <td>$<%= item.price.toFixed(2) %></td>
                                        <td>$<%= item.subtotal.toFixed(2) %></td>
                                    </tr>
                                    <% total += item.subtotal; %>
                                <% }) %>
                            </tbody>
                        </table>

                        <hr>

                        <% 
                            const gstRatePercent = 9;
                            const gstIncluded = invoice.subtotal * (gstRatePercent / (100 + gstRatePercent));
                            const totalDisplayed = invoice.subtotal + invoice.shippingFee - invoice.discountAmount;
                        %>
                        <!-- Totals Breakdown -->
                        <div class="text-end">
                            <p><strong>Subtotal:</strong> $<%= invoice.subtotal.toFixed(2) %></p>
                            <p><strong>Shipping Fee:</strong> $<%= invoice.shippingFee.toFixed(2) %></p>
                            <p><strong>GST (9% included):</strong> $<%= gstIncluded.toFixed(2) %></p>
                            <p><strong>Discount:</strong> -$<%= invoice.discountAmount.toFixed(2) %></p>
                            <h4 style="margin-top: 15px;"><strong>Total: $<%= totalDisplayed.toFixed(2) %></strong></h4>
                        </div>

                        <div class="mt-4 text-center">
                            <p class="text-success fw-bold">âœ“ Payment Successful</p>
                            <a href="/shopping" class="btn btn-primary">Continue Shopping</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
