<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Reset Password | Repawblic Pets</title>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body class="bg-light">
  <%- include('partials/navbar') %>

  <main class="py-5">
    <div class="container my-5">
      <div class="row justify-content-center">
        <div class="col-12 col-md-6">
          <div class="card shadow-sm">
            <div class="card-body">
              <h3 class="card-title mb-3">Reset Password</h3>

              <% const flashSuccess = Array.isArray(success) ? success : (success ? [success] : []); %>
              <% const flashError = Array.isArray(error) ? error : (error ? [error] : []); %>

              <% if (flashError && flashError.length) { %>
                <div class="alert alert-danger" role="alert">
                  <% flashError.forEach(function(message) { %>
                    <div><%= message %></div>
                  <% }); %>
                </div>
              <% } %>

              <% if (flashSuccess && flashSuccess.length) { %>
                <div class="alert alert-success" role="alert">
                  <% flashSuccess.forEach(function(message) { %>
                    <div><%= message %></div>
                  <% }); %>
                </div>
              <% } %>

              <form action="/forgot-password" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                  <label for="email" class="form-label">Email</label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    class="form-control"
                    required
                    value="<%= formData?.email || '' %>"
                    placeholder="Enter the email you registered with">
                </div>

                <div class="mb-3">
                  <label for="newPassword" class="form-label">New Password</label>
                  <input
                    type="password"
                    id="newPassword"
                    name="password"
                    class="form-control"
                    required
                    minlength="6"
                    placeholder="Enter a new password (min 6 characters)">
                </div>

                <div class="mb-3">
                  <label for="confirmPassword" class="form-label">Confirm New Password</label>
                  <input
                    type="password"
                    id="confirmPassword"
                    name="confirmPassword"
                    class="form-control"
                    required
                    minlength="6"
                    placeholder="Re-enter the new password">
                </div>

                <div class="d-flex justify-content-between align-items-center">
                  <a href="/login">Back to login</a>
                  <button type="submit" class="btn btn-primary">Update password</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <% if (flashSuccess && flashSuccess.length) { %>
    <script>
      // Show a confirmation alert then redirect to login
      alert("<%= flashSuccess[0].replace(/"/g, '\\"') %>");
      window.location.href = "/login";
    </script>
  <% } %>

  <%- include('partials/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+oj1gqJ0s4SK9Rzt+M26fRj6E3I6z" crossorigin="anonymous"></script>
</body>
</html>
